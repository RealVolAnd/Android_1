<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GW_Black" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GW_Purple" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CustomCityButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">#FFF</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="CustomSaveButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="strokeColor">@color/darkgreen</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="CustomCancelButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>